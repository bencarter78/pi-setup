# Locations
alias ~="cd ~"
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"
alias mybin="cd /usr/local/bin"

# Useful commands
alias la="ls -lah"
alias del="rm -rf"
alias aliases="vi ~/.bash_aliases"
alias cl="clear"
alias reload="source ~/.bashrc"
alias config="vim ~/.bashrc"

# Git
alias gaa="git add -A"
alias gs="git status"
alias gcmsg="git commit -m "
alias gmeh="git reset --hard HEAD && git clean -df"

# Composer
alias com="clear && composer"
alias cin="clear && composer install"
alias cup="clear && composer update"
alias csup="clear && composer self-update"
alias comda="clear && composer dump-autoload -o"
alias cda="clear && composer dump-autoload -o"
